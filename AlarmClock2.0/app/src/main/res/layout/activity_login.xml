<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0BB990"
    android:weightSum="1"
    tools:context="com.example.encore.swipeviewswithtabs.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login Form"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:id="@+id/user_name"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/user_pass"
        android:layout_alignStart="@+id/user_pass"
        android:layout_marginTop="34dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/user_pass"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="login"
        android:onClick="userLogin"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/user_pass"
        android:layout_alignStart="@+id/user_pass"
        android:layout_marginBottom="192dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="right"
        android:onClick="userReg"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/user_pass"
        android:layout_alignEnd="@+id/user_pass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="離線模式"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="44dp"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/user_pass"
        android:layout_alignEnd="@+id/user_pass" />


</RelativeLayout>
